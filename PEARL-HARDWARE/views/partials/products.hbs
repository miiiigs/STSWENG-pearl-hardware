<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-8 ">	
	{{#if product_list}}
    {{#each product_list}}
	<a href="/product?name={{this.name}}&id={{#if this.p_id}}{{this.p_id}}{{else}}{{this._id}}{{/if}}">
		<div class="bg-tertiary rounded shadow p-4 hover:bg-white hover:border hover:text-maincolor">
			<img class="h-44 w-44 mx-auto object-cover" src={{this.productpic}} alt="Product Image">
			<h2 class="text-xl font-semibold mt-2 text-center">{{this.name}}</h2>
			<p class="text-center mt-1">&#8369; {{this.price}}</p>	
		</div>
	</a>
    {{/each}}
	{{else}}
	<center> <p> No Products found! </p></center>
	{{/if}}
</div>
